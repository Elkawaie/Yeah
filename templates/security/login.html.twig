{% extends 'base.html.twig' %}

{% block body %}
  

   
        <body class="bg-dark">
            <div class="container">
                 <img class="mr-auto mt-5" src="{{asset('assets/Images/YeahLogo.png')}}"/>
                
                <div class="card card-login mx-auto mt-5">
                    
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form action="{{ path('security_login') }}" method="post">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input class="form-control"  id="username" type="text"  name="_username" aria-describedby="emailHelp" placeholder="Entrer votre Username">
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input class="form-control" id="password" name="_password" type="password" placeholder="Mot de passe">
                            </div>
                            <div class="form-group">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox"> Remember Password</label>
                                </div>
                                 <div class="form-check">
                                 <a href="{{ path('user_registration')}}"> S'inscrire</a>
                                 </div>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fa fa-sign-in" aria-hidden="true"></i> Yeah
                            </button>
                        </form>

                    </div>
                </div>
            </div>

        </body>


    {% endblock %}
    
    