{% extends 'base.html.twig' %}

{% block title %}Mettre à jour le Client{% endblock %}

{% block body %}


    <body class="bg-dark">

        <div class="container">
            <div class="card card-register mx-auto mt-5">
                <div class="text-center card-header">Mettre à jour le client</div>
                <div class="card-body">
                    {{ form_start(form)}}
                    <div class="form-group">
                        <div class="form-row">

                            <div class="col-md-6">
                                <div class="form-label-group">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    {{ form_row(form.prenom) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            {{ form_row(form.adresse) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    {{ form_row(form.CodePostal) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-label-group">
                                    {{ form_row(form.DateNaissance) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-label-group">
                                {{ form_row(form.Ville) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="mt-1 text-center col-md-6">
                                    {{ include('clients/_form.html.twig', {'button_label': 'Update'}) }}
                                </div>
                                <div class="mt-1 text-center col-md-6">
                                    {{ include('clients/_delete_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                                     
                                   
                                    
                                    {% for evenement in client.fkEvenementClient %}
                                      {% if loop.first %}
                                      <a href="{{ path('evenements_index', {'id': evenement.fkEntreprise.id} ) }}">Retour a la liste des clients</a>
                                      {% endif %}
                                   {%endfor%}
                                  
                    </div>

                    {{ form_end(form) }}
                    <div class="text-center">

                    </div>
                </div>
            </div>
        </div>
    </body>




{% endblock %}




